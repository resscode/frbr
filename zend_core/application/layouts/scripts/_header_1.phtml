<?php

$username = 'Guest';
if (isset($this->user)) {
    $username = $this->user->realName;
}

$applicationName = (isset($this->applicationName)) ? $this->applicationName : 'Фенечка';
$welcome = 'Welcome <span class="bold">' . $username . '</span>';

if (isset($this->user)) {
    $welcome .= ' - <a href="' 
        . $this->url(array('controller' => 'auth', 'action' => 'logout'), null, true)
        . '">logout</a>';
} else {
    $welcome .= ' - <a href="' 
        . $this->url(array('controller' => 'auth', 'action' => 'login'), null, true)
        . '">login</a>';
}

?>
<div id="header">
    <?php echo $welcome ?>
    <h1> <?php echo $applicationName ?></h1>        
</div>

<?php 
// FlashMessenger integration, (setup in bootstrap)
if (isset($this->messages)): ?>
    <center>
    <?php foreach ($this->messages as $message): ?> 
        <?php echo $message ?><br />
    <?php endforeach; ?>
    </center>
<?php endif; ?>